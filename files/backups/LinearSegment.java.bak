abstract class LinearSegment
{
	protected Coordinates northEnd;
	protected Coordinates southEnd;
	protected Coordinates westEnd;
	protected Coordinates eastEnd;
	
	protected double slope;
	protected double intercept;
	protected boolean isVertical;
	
	protected LinearSegment(){}
	
	abstract void determineExtremes();
	abstract void determineSlope();
	abstract void determineIntercept();
}